@model IEnumerable<Dnw.WebShop.Core.Models.ProductWithOrderCount>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Top Selling Products</h1>

    <table class="table">
        <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Product Gtin
            </th>
            <th>
                Total Quantity Ordered
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductGtin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderCount)
                </td>
                <td>
                    <form asp-controller="Home" method="post">
                        <input type="hidden" name="productId" value="@item.ProductId"/>
                        <button type="submit">Update Stock</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>